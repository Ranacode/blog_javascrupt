doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(href='https://fonts.googleapis.com/css?family=Lora%7cRokkitt%7cBahiana', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/2.4.0/css/flag-icon.min.css')
    link(rel='stylesheet', href='./index.css')
    title Blog Javascrupt
  body
    // HEADER Y NAV PRINCIPAL > XS
    .container-fluid.main-header
      .row.align-items-center
        .col-6.offset-2.offset-sm-0.col-sm-4.col-lg-4.offset-lg-2
          h1.main-title Javascrupt
        .col-sm-8.col-lg-4.hidden-xs-down
          ul.nav.justify-content-center
            li.nav-item
              a.nav-link.active(href='index.html') Home
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(data-toggle='dropdown', href='#', role='button', aria-haspopup='true', aria-expanded='false') Tutoriales JS
              .dropdown-menu.main-header.secondary-font
                a.dropdown-item(href='') Javascript ES6
                a.dropdown-item(href='') Node.js
                a.dropdown-item(href='') React.js
                a.dropdown-item(href='') MongoDB
                .dropdown-divider
                a.dropdown-item(href='') General
            li.nav-item
              a.nav-link(data-toggle='modal', data-target='#contact', href='#') Contacto
              #contact.modal.fade(tabindex='-1', role='dialog', aria-labelledby='contact', aria-hidden='true')
                .modal-dialog(role='document')
                  .modal-content
                    .modal-header
                      h5#title-label.modal-title Siéntete libre de contactar
                      button.close(type='button', data-dismiss='modal', aria-label='Close')
                        span(aria-hidden='true') ×
                    .modal-body
                      form
                        .form-group
                          label.form-control-label(for='recipient-name') Tu email para responderte:  
                          input#recipient-name.form-control(type='text')
                        .form-group
                          label.form-control-label(for='message-text') ¿Qué te gustaría saber?
                          textarea#message-text.form-control
                    .modal-footer
                      button.btn.btn-secondary(type='button', data-dismiss='modal') Cerrar
                      button.btn.btn-primary(type='button') Enviar mensaje
        // FIN HEADER Y NAV > XS
        // HEADER Y NAV XS
        .col-2.hidden-sm-up
          button.btn.btn-outline-danger.active(data-toggle='collapse', type='button', data-target='#nav-xs', aria-expanded='false', aria-controls='nav-xs')
            i.fa.fa.fa-bars(aria-hidden='true')
    .container-fluid.hidden-sm-up
      #nav-xs.collapse.main-header.row.align-items-center
        ul.nav.flex-column.text-center
          li.nav-item
            a.nav-link.active(href='index.html') Home
          li.nav-item
            a.nav-link(data-toggle='collapse', href='#nav-responsive', aria-expanded='false', aria-controls='collapseExample')
              | Tutoriales JS 
              i.fa.fa-arrow-down(aria-hidden='true')
            #nav-responsive.collapse
              .container.hidden-sm-up
                ul.nav.flex-column.text-center.secondary-font
                  li.nav-item
                    a(href='') Javascript ES6
                  .dropdown-divider
                  li.nav-item
                    a(href='') Node.js
                  li.nav-item
                    a(href='') React.js
                  li.nav-item
                    a(href='') MongoDB
                  .dropdown-divider
                  li.nav-item
                    a(href='') General
          li.nav-item
            a.nav-link(data-toggle='modal', data-target='#contact2', href='#') Contacto
          #contact2.modal.fade(tabindex='-1', role='dialog', aria-labelledby='contact', aria-hidden='true')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  h5#exampleModal.modal-title Siéntete libre de contactar
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
                .modal-body
                  form
                    .form-group
                      label.form-control-label(for='recipient-name') Tu email para responderte:  
                      input#recipient.form-control(type='text')
                    .form-group
                      label.form-control-label(for='message-text') ¿Qué te gustaría saber?
                      textarea#message.form-control
                .modal-footer
                  button.btn.btn-secondary(type='button', data-dismiss='modal') Cerrar
                  button.btn.btn-primary(type='button') Enviar mensaje
    // FIN HEADER Y NAV XS
    .col-12.text-center
      .btn-group
        button.btn.btn-warning.secondary-font(type='button') Idioma del blog
        button.btn.btn-warning.disabled.dropdown-toggle.dropdown-toggle-split(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
          span.sr-only Idioma blog
        .dropdown-menu.text-center
          button.btn.btn-outline-primary.btn-sm
            span.flag-icon.flag-icon-es
          .dropdown-divider
          button.btn.btn-outline-primary.btn-sm
            span.flag-icon.flag-icon-us
