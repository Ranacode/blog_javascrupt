            #social-platforms
              a.btn-social.btn-icon.btn-facebook(href='#')
                i.fa.fa-facebook
                span Facebook
              a.btn-social.btn-icon.btn-twitter(href='#')
                i.fa.fa-twitter
                span Twitter
              a.btn-social.btn-icon.btn-googleplus(href='#')
                i.fa.fa-google-plus
                span Google+
            nav(aria-label='Page navigation example')
              ul.pagination.justify-content-center
                li.page-item
                  a.page-link(href='#', aria-label='Previous')
                    span(aria-hidden='true') «
